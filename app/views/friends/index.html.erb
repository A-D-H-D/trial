
<p style="color: green"><%= notice %></p>
<% if user_signed_in? %>
  <h1>Friends</h1>


  <table class="table table-striped table-bordered table-hover">
    <thead class="thead-dark">
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Twitter</th>
      <th>User id </th>
      <th colspan="2"></th>
    </tr>
    </thead>
    <tbody>
    <% @friends.each do |friend| %>
     <% if friend.user == current_user %>
      <tr>
        <td>
          <%= link_to friend.first_name + ' ' + friend.lastname, friend %>
       </td>
        <td><%= friend.phone %></td>
        <td><%= friend.email %></td>
        <td><%= friend.twitter %></td>
        <td><%= friend.user_id %></td>

        <td>
          <%= link_to "Edit", edit_friend_path(friend)  %>
          <!-- Add more action links here if needed -->
        </td>
        <td>
          <%= button_to "Delete", friend, method: :delete, class:"btn btn-outline-danger btn-sm" %>
          <!-- Add more action links here if needed -->
        </td>
      </tr>
    <%end %>
    <% end %>
    </tbody>
  </table>

  <%= link_to "New friend", new_friend_path, class: "btn btn-secondary" %>
  <%else %>
  <h1>Hello </h1>
  This is my first rails webpage
<%end %>